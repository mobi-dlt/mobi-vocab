        "@context": {
            "type": "array"
        },
        "type": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "array"
                }
            ]
        },
        
        "RevokeHeader": {
            "$comment": "{\"term\": \"RevokeHeader\", \"@id\": \"https://schema.org/Name\"}",
